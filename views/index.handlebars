<div class="jumbotron jumbotron-fluid">
    <div class="container text-center ">
        <div class="row">
            <div class="col-sm-4 offset-sm-4 px-3 py-3 rounded hero">
                <h1 class="display-4">Eat Da Burgers</h1>
                <h1>
                    <i class="fas fa-hamburger "></i>
                    <i class="fas fa-hamburger "></i>
                    <i class="fas fa-hamburger "></i>
                </h1>
            </div>
        </div>

    </div>
</div>
<div class="row mx-4">
    <div class="col-md-4 mb-4 pb-2">
        <h3 class="text-muted">Burgers Ready To Eat</h3>
        <ul class="list-group">
            {{#each burgers}}
            {{#unless devoured}}
            {{> burgers/burger-block}}
            {{/unless}}
            {{/each}}
        </ul>
    </div>
    <div class="col-md-4 mb-4 pb-2">
        <h3 class="text-muted">Add a Burger</h3>
        <form class="create-form">

            <div class="form-group">
                {{!-- <label for="newBurger">Burger Name</label> --}}
                <input type="text" id="newBurger" name="newBurger" class="form-control" placeholder="Burger Name">
            </div>
            <button type="submit" class="btn btn-primary"><i class="fas fa-plus pr-2"></i>Add Burger</button>
        </form>
    </div>
    <div class="col-md-4 mb-4 pb-2">
        <h3 class="text-muted">Burgers in Your Tum-tum</h3>
        <ul>
            {{#each burgers}}
            {{#if devoured}}
            {{> burgers/burger-block}}
            {{/if}}
            {{/each}}
        </ul>
    </div>
</div>